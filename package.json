{
	"name": "obsidian-pebbledash",
	"version": "1.0.2",
	"description": "A dashboarding plugin for Obsidian powered by pebbledash",
	"type": "module",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "node esbuild.config.mjs production",
		"build:release": "node esbuild.config.mjs release",
		"clean": "node -e \"const fs=require('fs'); fs.rmSync('dist',{recursive:true,force:true}); console.log('Cleaned dist/')\"",
		"typecheck": "tsc -noEmit -skipLibCheck",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint ./src/",
		"lint:fix": "eslint ./src/ --fix",
		"docs": "typedoc",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"dashboard",
		"pebbledash"
	],
	"author": "Pebbledash Contributors",
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "^9.0.0",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^20.19.27",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"@vitest/coverage-v8": "^1.0.0",
		"builtin-modules": "3.3.0",
		"esbuild": "^0.27.1",
		"eslint": "^9.0.0",
		"globals": "^15.0.0",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typedoc": "^0.28.15",
		"typedoc-plugin-markdown": "~4.9.0",
		"typescript": "~5.8.0",
		"vitest": "^1.0.1"
	},
	"dependencies": {
		"@pebbledash/core": "^1.0.2",
		"@pebbledash/renderer-dom": "^1.0.2",
		"js-yaml": "^4.1.0"
	}
}
